{
  "name": "laconiar",
  "version": "1.3.0",
  "description": "requirejs like service for laconia",
  "license": "MIT",
  "author": {
    "name": "hugosenari",
    "email": "hugosenari@gmail.com",
    "url": "https://github.com/hugosenari/"
  },
  "repository": "https://github.com/hugosenari/laconiar",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "nps --no-scripts",
    "test": "nps test",
    "release": "release-it"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-flow": "^7.7.4",
    "all-contributors-cli": "^6.11.2",
    "babel-eslint": "^10.0.3",
    "babel-plugin-add-module-exports": "^1.0.2",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "release-it": "^12.4.3",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-plugin-flowtype": "^4.5.2",
    "eslint-plugin-import": "2.19.1",
    "flow-bin": "^0.114.0",
    "flow-typed": "^2.6.2",
    "husky": "^3.1.0",
    "jest": "^25.0.0",
    "lint-staged": "^9.5.0",
    "npm-check-updates": "^4.0.1",
    "nps": "^5.9.12",
    "nps-utils": "^1.7.0",
    "prettier": "^1.19.1",
    "remove-lockfiles": "^2.1.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --trailing-comma es5 --single-quote --write",
      "eslint --fix",
      "git add"
    ]
  },
  "keywords": [
    "laconiajs, severless, ioc"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "remove-lockfiles && lint-staged"
    }
  }
}
